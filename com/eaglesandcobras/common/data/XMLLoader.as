package com.eaglesandcobras.common.data {	import flash.events.EventDispatcher;	import flash.events.Event;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;	import flash.net.URLLoader;		public class XMLLoader extends EventDispatcher {		private var _loader:URLLoader = new URLLoader();		public var _xml:XMLList;				public function XMLLoader($path:String):void {			_loader.addEventListener(Event.COMPLETE,xmlLoaded);			_loader.addEventListener(IOErrorEvent.IO_ERROR, handleError);			_loader.load(new URLRequest($path));		}				private function xmlLoaded(e:Event):void {			_xml = new XML(e.target.data).item;			_loader.removeEventListener(Event.COMPLETE, xmlLoaded);			            this.dispatchEvent(e);		}				private function handleError(e:IOErrorEvent):void {			//this.dispathcEvent(e);		}				/*****************************		GET XML		*****************************/		public function get data():Object {			return _xml as Object;		}	}}