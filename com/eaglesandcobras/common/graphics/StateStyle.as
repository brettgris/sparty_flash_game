package com.eaglesandcobras.common.graphics{
	
	public class StateStyle extends Object{
		private var _fill:Boolean;
		private var _fillColor:uint;
		private var _fillAlpha:Number;
		private var _stroke:Boolean;
		private var _strokeColor:uint;
		private var _strokeAlpha:Number;
		private var _strokeWidth:Number;
		private var _cornerRadius:Number;
		private var _width:Number;
		private var _height:Number;
		
		public function StateStyle(){
			_fill = true;
			_fillColor = 0x000000;
			_fillAlpha = 1;
			_stroke = false;
			_strokeColor = 0xFFFFFF;
			_strokeAlpha = 1;
			_strokeWidth = 1;
			_cornerRadius = 0;
			_width = 100;
			_height = 100;
		}
		
		/*****************************
		Fill
		*****************************/
		public function set fill($b:Boolean):void {
			_fill = $b;
		}
		
		public function get fill():Boolean {
			return _fill;
		}
		
		/*****************************
		Fill Color
		*****************************/
		public function set fillColor($b:uint):void {
			_fillColor = $b;
		}
		
		public function get fillColor():uint {
			return _fillColor;
		}
		
		/*****************************
		Alpha
		*****************************/
		public function set alpha($b:Number):void {
			_fillAlpha = $b;
		}
		
		public function get alpha():Number {
			return _fillAlpha;
		}
		
		/*****************************
		Stroke
		*****************************/
		public function set stroke($b:Boolean):void {
			_stroke = $b;
		}
		
		public function get stroke():Boolean {
			return _stroke;
		}
		
		/*****************************
		Stroke
		*****************************/
		public function set strokeColor($b:uint):void {
			_strokeColor = $b;
		}
		
		public function get strokeColor():uint {
			return _strokeColor;
		}

		
		/*****************************
		Stroke Width
		*****************************/
		public function set strokeWidth($b:Number):void {
			_strokeWidth = $b;
		}
		
		public function get strokeWidth():Number {
			return _strokeWidth;
		}
		
		/*****************************
		Corner Radius
		*****************************/
		public function set cornerRadius($b:Number):void {
			_cornerRadius = $b;
		}
		
		public function get cornerRadius():Number {
			return _cornerRadius;
		}
		
		/*****************************
		Width
		*****************************/
		public function set width($b:Number):void {
			_width = $b;
		}
		
		public function get width():Number {
			return _width;
		}
		
		/*****************************
		Height
		*****************************/
		public function set height($b:Number):void {
			_height = $b;
		}
		
		public function get height():Number {
			return _height;
		}
		
	}
}