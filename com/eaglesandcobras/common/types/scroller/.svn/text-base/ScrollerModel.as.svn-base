package com.eaglesandcobras.common.types.scroller{	import com.eaglesandcobras.common.thumbs.ThumbnailsModel;	import com.eaglesandcobras.common.graphics.ScrollStyle;	import com.eaglesandcobras.common.graphics.ItemStyle;	import com.eaglesandcobras.common.thumbs.Paging;		public class ScrollerModel extends ThumbnailsModel{						public function ScrollerModel(){			super();		}				/*****************************		Calculate Items Per Page		*****************************/		public function setPaging($ss:ScrollStyle, $is:ItemStyle):void {			var p:Paging = paging;						if ($ss.direction == ScrollStyle.HORIZONTAL) p.itemsPerPage = Math.floor( ($ss.width+$ss.padding)/($is.width+$ss.padding) );			else if ($ss.direction == ScrollStyle.VERTICAL) p.itemsPerPage = Math.floor( ($ss.height+$ss.padding)/($is.height+$ss.padding) );			p.totalPages = Math.ceil( (p.totalItems/p.itemsPerPage) );						paging = p;		}	}}