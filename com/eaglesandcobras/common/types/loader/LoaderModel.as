package com.eaglesandcobras.common.types.loader{	import com.eaglesandcobras.common.mvc.Model;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.Event;	import com.eaglesandcobras.common.events.LoaderEvent;	import flash.display.DisplayObject;		public class LoaderModel extends Model{		private var _loader:Loader;				public function LoaderModel(){			super();			init();		}				private function init():void {			_loader = new Loader();		}				/*****************************		LoadImage		*****************************/		public function loadContent($s:String):void {			_loader.contentLoaderInfo.addEventListener(Event.COMPLETE, contentLoaded);			_loader.load( new URLRequest ($s) );		}				private function contentLoaded(e:Event):void {			this.dispatchEvent( new LoaderEvent (LoaderEvent.DATA_READY) );		}				/*****************************		GET LOADER		*****************************/				public function get image():Loader {			return _loader;		}	}}