package com.eaglesandcobras.common.types.loader{	import com.eaglesandcobras.common.mvc.App;	import com.eaglesandcobras.common.types.loader.*;	import com.eaglesandcobras.common.events.LoaderEvent		public class ContentLoader extends App {		private var _model:LoaderModel;		private var _view:LoaderView;				public function ContentLoader(){			super(new LoaderModel(), new LoaderView());			init();		}				private function init():void {			_model = model as LoaderModel;			_view = view as LoaderView;		}				/*****************************		CONTENT		*****************************/		public function set content($s:String):void {			_model.loadContent($s);			_model.addEventListener(LoaderEvent.DATA_READY, contentLoaded);		}				private function contentLoaded(e:LoaderEvent):void {			_view.addContent(_model.image);			_view.addEventListener(LoaderEvent.DATA_ADDED, contentReady);		}				private function contentReady(e:LoaderEvent):void {			this.dispatchEvent( new LoaderEvent (LoaderEvent.CONTENT_READY) );		}				/*****************************		SET SIZE		*****************************/		public function setSize($width:Number, $height:Number):void {			_view.setSize($width, $height);		}				/*****************************		SET ASPECT RATIO		*****************************/		public function get mantainAspectRatio():Boolean{			return _view.maintainAspectRatio;		}				public function set mantainAspectRatio($b:Boolean):void {			_view.maintainAspectRatio = $b;		}			}}