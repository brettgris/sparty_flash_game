package com.eaglesandcobras.common.types.loader{	import com.eaglesandcobras.common.mvc.View;	import flash.display.Loader;	import flash.display.DisplayObject;		public class LoaderView extends View{		private var _content:DisplayObject;		private var _aspectRatio:Boolean;		private var _width:Number = 100;		private var _height:Number = 100;				public function LoaderView(){			super();						_content = new Loader();		}				/*****************************		Load The Content		*****************************/		public function addContent($l:Loader):void {			_content = addChild($l);			sizeContent();		}				private function sizeContent():void {			if (!_aspectRatio){				_content.width = _width;				_content.height = _height;								_content.x=0;				_content.y=0;			} else{				var contentRatio:Number = _content.width/_content.height;				var sizeRatio:Number = _width/_height;								if (contentRatio>sizeRatio){					_content.width = _width;					_content.scaleY = _content.scaleX;										_content.x = 0;					_content.y = (_height-_content.height)/2;				} else {					_content.height = _height;					_content.scaleX = _content.scaleY;										_content.y = 0;					_content.x = (_width-_content.width)/2;				}			}		}				/*****************************		Set Size		*****************************/		public function setSize($width:Number, $height:Number):void {			_width = $width;			_height = $height;						sizeContent();		}				/*****************************		ASPECT RATIO		*****************************/		public function set maintainAspectRatio($b:Boolean):void {			_aspectRatio = $b;						sizeContent();		}				public function get maintainAspectRatio():Boolean {			return _aspectRatio;		}	}}