package com.starz.games.sparty.builder.sounds{
	import com.eaglesandcobras.common.sounds.SoundLoader;
	
	public class StackerSounds extends SoundLoader{
		public static const BRICK_FALL:String = "BrickFellSound";
		public static const SCORE_IT:String = "ScoreItSound";
		public static const BRICK_HIT:String = "BrickHitSound";
		public static const BEEP_SOUND:String = "BeepSound";
		public static const BUTTON_OVER:String = "ButtonOverSound";
		public static const TRANSITION_SOUND:String = "TransitionSound";
		
		public function StackerSounds(){
			super();
		}
		
		override public function loadSounds():void {
			addSound( BRICK_FALL, false );
			addSound( SCORE_IT, false );
			addSound( BRICK_HIT, false );
			addSound( BEEP_SOUND, false );
			addSound ( BUTTON_OVER, false );
			addSound ( TRANSITION_SOUND, false );
		}
	}
}